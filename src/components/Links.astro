---
import { Image } from "astro:assets";
import thumbnail from "@/assets/thumnail.jpg";

interface Link {
  id: string;
  url: string;
}

interface Props {
  links: Link[];
}

const { links } = Astro.props as Props;
---

<h2>Links</h2>

<div class="grid grid-cols-1 lg:grid-cols-[300px_1fr] gap-6 items-start">
  <div class="hidden lg:block">
    <Image src={thumbnail} width="300" alt="Preview" class="shadow-xl" />
  </div>

  <div>
    <ul class="space-y-2">
      {
        links.map((link) => (
          <li>
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-600 hover:underline"
            >
              {link.id}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
