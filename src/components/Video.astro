---
interface Props {
  src: string;
  name: string;
  description: string;
}

const { src, name, description } = Astro.props;
---

<figure class="my-8">
  <video controls loop class="w-full shadow-sm" aria-label={name}>
    <source src={src} type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <figcaption class="mt-3 text-center text-base leading-7 text-muted">
    <strong>{name}:</strong>
    {description}
  </figcaption>
</figure>
