---
interface Props {
  src: string;
  name: string;
  description: string;
}

const { src, name, description } = Astro.props;
---

<figure class="my-8 w-screen -mx-[calc((100vw-100%)/2)] px-2">
  <video
    controls
    loop
    class="w-full max-w-5xl mx-auto shadow-md"
    aria-label={name}
  >
    <source src={src} type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <figcaption
    class="mt-4 text-center text-base leading-7 text-muted max-w-3xl mx-auto"
  >
    <strong>{name}:</strong>
    {description}
  </figcaption>
</figure>
