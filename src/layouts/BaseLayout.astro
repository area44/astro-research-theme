---
import Head from "@/components/Head.astro";

interface Props {
  frontmatter: {
    title?: string;
    description?: string;
    ogImage?: string;
  };
}

const { title, description, ogImage } = Astro.props.frontmatter;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={title} description={description} ogImage={ogImage} />
  </head>
  <body
    class="min-h-screen flex justify-center items-start bg-background text-foreground antialiased"
  >
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 px-3 py-2 rounded bg-muted text-background"
    >
      Skip to content
    </a>

    <main
      id="main-content"
      role="main"
      class="w-full max-w-[210mm] aspect-[210/297] m-2 p-4"
    >
      <slot />
    </main>
  </body>
</html>
